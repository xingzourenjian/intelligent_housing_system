<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- ==================== 应用主题配置 ==================== -->
    <!-- 继承自Material Components的昼夜主题，支持暗色模式适配 -->
    <!-- parent: 使用带深色ActionBar的昼夜切换主题 -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- ==================== 颜色配置 ==================== -->
        <item name="colorPrimary">@color/colorPrimary</item>         <!-- 主品牌色（来自colors.xml） -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item> <!-- 状态栏颜色（来自colors.xml） -->
        <item name="colorAccent">@color/colorAccent</item>          <!-- 强调色（来自colors.xml） -->

        <!-- ==================== 系统界面配置 ==================== -->
        <item name="android:statusBarColor">?attr/colorPrimaryDark</item> <!-- 状态栏颜色与主色深色版同步 -->

        <!-- ==================== 窗口样式 ==================== -->
        <item name="windowActionBar">false</item>     <!-- 禁用默认ActionBar -->
        <item name="windowNoTitle">true</item>        <!-- 隐藏标题栏（需配合自定义Toolbar使用） -->
    </style>
</resources>